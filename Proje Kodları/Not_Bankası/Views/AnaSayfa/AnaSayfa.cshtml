@using Not_Bankası.Models.VeriTabani;
@{
    ViewBag.Title = "AnaSayfa";
    //Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

@section head{
    <head>
        @* Searc bar Css *@
        <link href="~/Css/SearchBarStyle.css" rel="stylesheet" />
        @* Searc bar Css *@
    </head>
}


@model List<Universite>

<section class="home-banner-area relative" style="margin-top:80px;">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-8 col-md-12">
                <h1 class="wow fadeIn" data-wow-duration="4s">Tüm Ders Notlarının  <br> Buluştuğu Yer</h1>
                <p class="text-white mb-4">
                    Aradığınız tüm ders notlarını bulabilir ders notlarını diğer kullanıcılarla paylaşa biirisiniz.
                </p>
                <section class="search-sec">
                    <div class="container">
                        <form action="#" method="post" novalidate="novalidate">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <input type="text" class="form-control search-slt" placeholder="Ders Adı">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <select class="form-control search-slt" id="secilenuniversiteID">
                                                <option hidden>Üniversite</option>
                                                @foreach (Universite universite in Model)
                                                {
                                                    <option value="@universite.Universite_Id">@universite.UniversiteAdı</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <select class="form-control search-slt" id="bolumler">
                                                <option hidden>Bölümler</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <button type="button" class="btn btn-primary wrn-btn fa fa-search aria-hidden=" true"">&nbsp;Ara</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>

                <h4 class="text-white mt-4">

                    Notlar
                </h4>
                <div class="courses pt-20">
                    <a href="#" data-wow-duration="1s" data-wow-delay=".3s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">
                        Hukuk
                    </a>
                    <a href="#" data-wow-duration="1s" data-wow-delay=".6s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">Tıp</a>
                    <a href="#" data-wow-duration="1s" data-wow-delay=".9s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">Mühendislik</a>
                    <a href="#" data-wow-duration="1s" data-wow-delay="1.2s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">
                        İşletme
                    </a>
                    <a href="#" data-wow-duration="1s" data-wow-delay="1.5s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">İlahiyat</a>
                    <a href="#" data-wow-duration="1s" data-wow-delay="1.8s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">
                        İktisat
                    </a>
                    <a href="#" data-wow-duration="1s" data-wow-delay="2.1s" class="primary-btn transparent mr-10 mb-10 wow fadeInDown">Fen Edebiyat</a>
                </div>
            </div>
        </div>
    </div>
</section>


